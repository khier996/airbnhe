<%= form_tag(men_path, :method => "get", id: "search-form") do %>
<%= select_tag(:services, options_for_select([['Services'],
               ['Fake Wedding'], ['Meet the parents'], ['Meet the friends'], ['Cuddling'], ['Dinner Date'], ['Park Walk']]))%>

<%= select_tag(:height, options_for_select([
               ["100-150"], ["150-200"], ["200-250"]]), prompt: "Height")%>

<%= select_tag(:price, options_for_select([["1000-2000"], ["2000-3000"], ["3000-4000"]]), prompt: "Price")%>
<%= text_field_tag :search_address, nil, placeholder: "City" %>

<%= text_field_tag :search, nil, placeholder: "His name?" %>

<%= submit_tag("Search", :class => "btn btn-primary")%>

<% end %>
