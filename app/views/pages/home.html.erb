
  <!-- Picture home page -->
  <div class="banner padded text-center" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://scoopempire.com/wp-content/uploads/2014/01/sisayed-1024x515.png');">
    <h1>Lets bang!</h1>
    <br>
    <h3>I will sink you with my pink torpedo.</h3>
  </div>

  <!-- Search bar -->
  <div class="container text-center" style="margin-bottom: 50px; margin-top: 50px">

    <%= form_tag(men_path, :method => "get", id: "search-form") do %>
    <%= select_tag(:services, options_for_select([['Services'],
                   ['Fake Wedding'], ['Meet the parents'], ['Meet the friends'], ['Cuddling'], ['Dinner Date'], ['Park Walk']]))%>
    <%= select_tag(:height, options_for_select([['Height'],
                   ['100-150', '1'], ['150-200', '2'], ['200-250', '3']]))%>
    <%= select_tag(:price, options_for_select([['Price'],
                   ['1000-2000', '1'], ['2000-3000', '2'], ['3000+', '3']]))%>
    <%= text_field_tag :search, nil, placeholder: "His name?" %>

    <%= submit_tag("Search", :class => "btn btn-primary")%>

    <% end %>
  </div>

  <!-- Man card for suggestions-->
  <div class="container" >
    <div class="row">
      <% @suggestions.each do |man| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= man.photos.any? ? cl_image_path(man.photos.first.path) : '' %>');">
        <div class="card-description">
          <h2><%= man.name %></h2>
          <h3><%= man.summary %></h3>
          <p><%= man.height %> cm  <%= man.weight %> Kg  <%= man.price %> RMB</p>
        </div>
        <%= link_to("", man_path(man), class: "card-link") %>
      </div>
      </div>
      <% end %>
    </div>
    <p class="text-center padded">
    <%= link_to('Pimp a man', new_man_path, { class: "btn btn-primary" })%>
    </p>
  </div>



