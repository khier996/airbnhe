<h1>Men#index</h1>
<p>Find me in app/views/men/index.html.erb</p>

  <div class="container text-center" >
    <div class="row">
      <% @men.each do |man| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= man.url? ? cl_image_path(man.url.path) : '' %>');">
        <div class="card-description">
          <%= man.name %>
          <%= man.summary %>
          <%= man.height %>
          <%= man.price %>
        </div>
          <%= link_to('View', man_path(man), { class: "btn btn-primary" })%>
      </div>
      </div>
      <% end %>
    </div>
    <p class="padded">
    <%= link_to('Add a man', new_man_path, { class: "btn btn-primary" })%>
    </p>
  </div>
