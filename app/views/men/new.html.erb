<h1 class="text-center">Create a new man</h1>
<%= simple_form_for(@man) do |f| %>
<%= f.input :name %>
<%= f.input :height, collection: (100..250) %>
<%= f.input :weight, collection: (40..150) %>
<%= f.input :birthdate %>
<%= f.input :description %>
<%= f.input :services, :as => :check_boxes, :collection => ["Fake Wedding", "Meet the parents", "Meet the friends", "Cuddling", "Dinner Date", "Park Walk"] %>
<%= f.input :price %>
<%= f.submit class: "btn btn-primary text-center" %>
<% end %>

